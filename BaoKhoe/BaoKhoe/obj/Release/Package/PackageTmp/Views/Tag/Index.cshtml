@using BaoKhoe.Models
@{
  string tag = ViewBag.Tag;
  List<Article> articles = ViewBag.Articles == null ? new List<Article>() : ViewBag.Articles;
  List<Article> hotArticles = ViewBag.HotArticles == null ? new List<Article>() : ViewBag.HotArticles;
  ViewBag.Title = "Từ khóa \"" + tag + "\"" + " - Sức Khỏe 24 Giờ - Sức Khỏe Gia Đình, cách Phòng Bệnh & chăm sóc";
}

<div id="tag-input-data" data-tag-input="@tag"></div>

<div class="bg_top grid1000 poslide qcao">
  <a href="#"><img alt="" src="../../../assets/pic/qc1.png" /></a>
</div>

<div class="pkg grid1000 mar_top40 mar_bottom30">
  <div class="col660 fl">
    <div class="head_tag">
      <div class="select_tag pkg">
        <div class="mar_bottom20">
          <div class="f20 fontSFDB mar_bottom10 fl mar5">Kết quả tìm kiếm cho từ khóa</div>
          <a href="" class="tag_key">@tag</a>
        </div>
        <div class="box_search_big mar_bottom10">
          <form role="search" method="get" class="box-search_top" action="/">
            <input class="box_search_input_w" type="text" value="@tag" />
            <input class="box_search_btn_big" type="submit" id="searchsubmit" value="" />
          </form>
        </div>
        <div class="f12">Vui lòng tìm lại nếu chưa hài lòng</div>
      </div>
    </div>
    <div class="line_bg mar_top30 mar_bottom30"></div>
    <div class="list_cat_news">

      @foreach (Article article in articles)
      {
        <div class="box_vertical pkg article" data-url="@article.FriendlyTitle">
          <div class="module-thumb thumb265 fl">
            <a href="/@article.Category.Url/@article.FriendlyTitle" class="thumb16x9">
              <img style="background: #ececec"
                   src="https://img.saostar.vn/2017/05/10/1277759/sulli10.gif"
                   srcset="@article.Thumbnail"
                   title="@article.Title">
            </a>
          </div>
          <div class="info_vertical_news fl">
            <h3>
              <a href="/@article.Category.Url/@article.FriendlyTitle" class="title_cate fontOPSB">
                @article.Title
              </a>
            </h3>
            <div class="time_cate">
              <a href="/@article.Category.Url/" class="tag_cate fontOPB">
                @article.Category.Name
              </a> - <span class="time_news fontOP">
                <time class="time-ago" datetime="@article.CreatedAt.ToString(" s")">
                  @article.GetDisplayTime()
                </time>
              </span>
            </div>
            <div class="sapo_news limit_sapo_new3">
              @article.Headlines
            </div>
          </div>
        </div>
      }
    </div>

    <div id="load-more-tag"></div>

    @if (articles.Count >= 20)
    {
      <div class="mar_top10" id="btn-load-more-tag">
        <div class='paging'>
          <a onclick="loadMoreTag(this)">
            Xem thêm
          </a>
        </div>
      </div>
    }

  </div>
  @Html.Partial("~/Views/Shared/_RightList.cshtml", hotArticles)
</div>

<div class="pkg grid1000 mar_bottom20">
  <div class="bannerhome ">
    <div class="banner bottom-banner">

    </div>
  </div>
</div>
