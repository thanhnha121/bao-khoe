    <div id='balloon_wrap' title="Lên đầu trang">
      <div id='div-gpt-ad-1478165578373-26'>
      </div>
    </div>
    <style type="text/css">
      #balloon_wrap {
        height: 80px;
        width: 80px;
        position: fixed;
        bottom: 50px;
        right: 0;
        z-index: 999;
        -webkit-transition: all 0.3s ease;
        transition: all 0.3s ease;
        -webkit-transform: translateX(100%);
        transform: translateX(100%);
      }

        #balloon_wrap.visible {
          -webkit-transform: translateX(0%);
          transform: translateX(0%);
        }
    </style>
    <script type="text/javascript">
      $(window).load(function () {
        $(window).on('scroll', function () {
          var offset = $(window).scrollTop(); if (offset > 1000) { $('#balloon_wrap').addClass('visible'); } else { $('#balloon_wrap').removeClass('visible'); }
        })
      })
    </script>
    <p id="back-top" style="bottom: 520px;">
      <a href="#top">
        <span></span>
      </a>
    </p>
