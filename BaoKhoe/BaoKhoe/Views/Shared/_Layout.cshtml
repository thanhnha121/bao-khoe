<body class="home page-template page-template-page-saostar-v3 page-template-page-saostar-v3-php page page-id-240869 wpb-js-composer js-comp-ver-5.1.1 vc_responsive">
  <div class="page-wrap">
    <header id="page-head">
      <div class="pkg">
        <div class="grid1000 top_page pkg" style="position: relative;">
          <a id="open_sub"></a>
          <h2><a href="/" class="logo fl"><img width="248" src="/assets/image/logo-origin.png" alt="Sức Khỏe 24 Giờ - Sức Khỏe Gia Đình, cách Phòng Bệnh & chăm sóc"></a></h2>
          <div class="trending trending_top fl" style="margin-left: 20px;">
            <div class="title_trend fontOPSB">TRENDING</div>
            <a href="/tag/phau-thuat-tham-my/"><span>#</span>Phẫu thuật thẩm mỹ</a>
          </div>
          <div class="right_top_page fr">
            <div class="fl" style="transform: translateY(-36px); -webkit-transform: translateY(-36px);">
              <div class="btn-baogia-top"><a href="/lien-he-quang-cao/">Hợp tác quảng cáo</a></div>
            </div>
            <div class="box_search fl">
              <input class="box_search_input" type="text"
                     placeholder="Nhập nội dung tìm kiếm"
                     id="search-input"
                     required>
              <input class="box_search_btn" type="submit"
                     onclick="searchClick()">
            </div>
          </div>
        </div>
        <nav id="menu" class="navigation">
          <div class="grid1000 pkg" itemscope itemtype="http://schema.org/SiteNavigationElement">
            <ul class="menu_main">
              <li class="active" itemprop="name">
                <a itemprop="url" href="/">
                  <img class="imghome" width="16" src="/assets/data/themes/saostarv4/assets/images/icon/icon-home.png" alt="home" title="Trang chủ">
                </a>
              </li>

              @for (int i = 0; i < categories.Count; i++)
              {
                if (i < 8)
                {
                  <li class="@(category.Id == @categories[i].Id ? "active" : "")" itemprop="name">
                    <a itemprop="url" href="/@categories[i].Url">@categories[i].Name</a>
                    @if (categories[i].SubCategories.Count > 0)
                    {
                      <div class="ul-sub-cate">
                        @foreach (Category c in categories[i].SubCategories)
                        {
                          <div class="li-sub-cate @(category.Id == @c.Id ? "active" : "")">
                            <a itemprop="url" href="/@c.Url">@c.Name</a>
                          </div>
                        }
                      </div>

                      <div class="expand-parent-menu" onclick="onExpandMenuClick(event)">+</div>
                      <div class="expand-ul-sub-cate">
                        @foreach (Category c in categories[i].SubCategories)
                        {
                          <div class="expand-li-sub-cate">
                            <a itemprop="url" href="/@c.Url">- @c.Name</a>
                          </div>
                        }
                      </div>
                    }
                  </li>
                }
              }

              <li class="more" itemprop="name">
                <a itemprop="url" href="/" title="Nhiều hơn">●●●</a>

                <div class="ul-sub-cate">
                  @for (int i = 8; i < categories.Count && !categories[i].IsSubCategory; i++)
                  {
                    <div class="li-sub-cate @(category.Id == categories[i].Id ? "active" : "")">
                      <a itemprop="url" href="/@categories[i].Url">@categories[i].Name</a>
                    </div>
                  }
                </div>
              </li>

              @for (int i = 8; i < categories.Count && !categories[i].IsSubCategory; i++)
              {
                <li class="out-of-range" itemprop="name">
                  <a itemprop="url" href="/@categories[i].Url">@categories[i].Name</a>
                  @if (categories[i].SubCategories.Count > 0)
                  {
                    <div class="ul-sub-cate">
                      @foreach (Category c in categories[i].SubCategories)
                      {
                        <div class="li-sub-cate @(category.Id == c.Id ? "active" : "")">
                          <a itemprop="url" href="/@c.Url">@c.Name</a>
                        </div>
                      }
                    </div>
                  }
                </li>
              }

            </ul>
          </div>
        </nav>
      </div>
    </header>

    <style type="text/css">
      .btn-baogia-top {
