@using BaoKhoe.Models
@{
  List<Article> hotArticles = ViewBag.HotArticles == null ? new List<Article>() : ViewBag.HotArticles;
  List<Article> sameCategoryArticles = ViewBag.SameCategoryArticles == null ? new List<Article>() : ViewBag.SameCategoryArticles;
}
<div class="pkg grid1000">
  <hr class="line mar_bottom25 mar_top20">
  <div class="pkg list_new_speacial">
    <div class="title_cate_home mar_bottom20">Tin hot trong ngày</div>
    <div class="pkg">
      @if (hotArticles.Count > 1)
      {
        <div class="col380 fl">
          <div class="module-thumb mar_bottom10">
            <a href="@("/" + hotArticles[0].Category.Url + "/" + hotArticles[0].FriendlyTitle)" class="thumb16x9">
              <img style="background: #ececec" src="@hotArticles[0].Thumbnail" class="unload-image"
                   data-src="@hotArticles[0].Thumbnail"
                   title="@hotArticles[0].Title">
            </a>
          </div>
          <h3>
            <a href="@("/" + hotArticles[0].Category.Url + "/" + hotArticles[1].FriendlyTitle)"
               class="fontOPB f22">@hotArticles[1].Title</a>
          </h3>
          <div class="mar_top10">
            <a href="/@hotArticles[0].Category.Url/" class="tag_cate fontOPB">
              @hotArticles[0].Category.Name
            </a>
            <span class="cl999 fontOP">
              - <time class="time-ago" datetime="@(hotArticles[0].CreatedAt.ToString(" s"))">
                @hotArticles[0].GetDisplayTime()
              </time>
            </span>
          </div>
        </div>
        <div class="col220 fl">
          <div class="module-thumb mar_bottom10">
            <a href="@("/" + hotArticles[1].Category.Url + "/" + hotArticles[1].FriendlyTitle)" class="thumb16x9">
              <img style="background: #ececec"
                   src="@hotArticles[1].Thumbnail"
                   class="unload-image"
                   data-src="@hotArticles[1].Thumbnail"
                   title="@hotArticles[1].Title" />
            </a>
          </div>
          <h3>
            <a href="@("/" + hotArticles[1].Category.Url + "/" + hotArticles[1].FriendlyTitle)" class="fontOPB f16">
              @hotArticles[1].Title
            </a>
          </h3>
          <div class="mar_top10 f12">
            <a href="/@hotArticles[1].Category.Url/" class="tag_cate fontOPB">
              @hotArticles[1].Category.Name
            </a>
            <span class="cl999 fontOP">
              - <time class="time-ago" datetime="@(hotArticles[1].CreatedAt.ToString(" s"))">
                @hotArticles[1].GetDisplayTime()
              </time>
            </span>
          </div>
          <div class="sapo_news mar_top5">
            @hotArticles[1].Headlines
          </div>
        </div>
      }

      @if (hotArticles.Count > 2)
      {
        <div class="col350 fl">
          <ul class="list_new_speacial_right">
            @for (int i = 2; i < hotArticles.Count; i++)
            {
              <li class="pkg">
                <div class="module-thumb thumb140 fl">
                  <a href="/@hotArticles[i].Category.Url/@hotArticles[i].FriendlyTitle" class="thumb16x9">
                    <img style="background: #ececec" src="@hotArticles[i].Thumbnail"
                         class="unload-image"
                         data-src="@hotArticles[i].Thumbnail"
                         title="@hotArticles[i].Title">
                  </a>
                </div>
                <div class="fl col-list-right">
                  <h3 class="limit_sapo_new3">
                    <a href="/@hotArticles[i].Category.Url/@hotArticles[i].FriendlyTitle">
                      @hotArticles[i].Title
                    </a>
                  </h3>
                  <div class="f11">
                    <a href="/@hotArticles[i].Category.Url/" class="tag_cate fontOPB">
                      @hotArticles[i].Category.Name
                    </a>
                  </div>
                </div>
              </li>
            }
          </ul>
        </div>
      }

    </div>
  </div>
</div>

